@model Shopping.ModelViews.OrderViewVM
@{
    var Customer = Model.Customer;
    var Locations = Model.Locations;
}
<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Product Related</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Checkout</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="checkout-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-12">
                    <form action="javascript:void(0)">
                        <div class="checkbox-form">
                            <h3>Chi tiết đơn hàng</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Họ và tên <span class="required">*</span></label>
                                        <input placeholder="" type="text" value="@Customer.FullName">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="country-select clearfix">
                                        <label>Tỉnh - Thành Phố <span class="required">*</span></label>
                                        <select class="myniceselect nice-select wide">
                                            <option>Hồ Chí Minh</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label>Quận / Huyện <span class="required">*</span></label>
                                        <select class="myniceselect nice-select wide">
                                            <option>Quận Bình Thạnh</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label>Phường - Xã <span class="required">*</span></label>
                                        <input placeholder="" type="text">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label>Địa chỉ chi tiết </label>
                                        <input placeholder="Tên đường, số nhà, tầng, khu, ..." type="text">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label>Email <span class="required">*</span></label>
                                        <input placeholder="" type="email">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label>Số điện thoại <span class="required">*</span></label>
                                        <input type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="different-address">
                                <div class="ship-different-title">
                                    <h3>
                                        <label>Giao hàng tại địa chỉ khác?</label>
                                        <input id="ship-box" type="checkbox">
                                    </h3>
                                </div>
                                <div id="ship-box-info" class="row">
                                    <div class="col-md-6">
                                        <div class="country-select clearfix">
                                            <label>Tỉnh - Thành Phố <span class="required">*</span></label>
                                            <select class="myniceselect nice-select wide">
                                                <option>Hồ Chí Minh</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <label>Quận / Huyện <span class="required">*</span></label>
                                            <select class="myniceselect nice-select wide">
                                                <option>Quận Bình Thạnh</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <label>Phường - Xã <span class="required">*</span></label>
                                            <input placeholder="" type="text">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <label>Địa chỉ chi tiết </label>
                                            <input placeholder="Tên đường, số nhà, tầng, khu, ..." type="text">
                                        </div>
                                    </div>
                                </div>
                                <div class="order-notes">
                                    <div class="checkout-form-list checkout-form-list-2">
                                        <label>Ghi chú</label>
                                        <textarea id="checkout-mess" cols="30" rows="10" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                @if(Model.Details != null)
                {
                    <div class="col-lg-6 col-12">
                        <div class="your-order">
                            <h3>Đơn hàng</h3>
                            <div class="your-order-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="cart-product-name">Sản phẩm</th>
                                            <th class="cart-product-total">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model.Details)
                                        {
                                            <tr class="cart_item">
                                                <td class="cart-product-name">
                                                    @item.Product.ProductName<strong class="product-quantity">
                                                        × @item.Quantity
                                                    </strong>
                                                </td>
                                                <td class="cart-product-total"><span class="amount">@(item.Product.Price * item.Quantity)</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="order-total">
                                            <th>Tổng tiền</th>
                                            <td><strong><span class="amount">@Model.TotalPrice</span></strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            
                            <div class="order-button-payment">
                                <input value="Place order" type="submit">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->