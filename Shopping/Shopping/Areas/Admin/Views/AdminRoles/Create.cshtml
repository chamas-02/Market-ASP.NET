@model Shopping.Models.Role

@{
    ViewData["Title"] = "Tạo quyền truy cập mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Tạo quyền truy cập</span>
        </nav>
    </div>
</div>

<form asp-controller="AdminRoles" asp-action="Create" method="post" id="form-validation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-body">
            <h4>Thông tin quyền truy cập</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-semibold">Role Name *</label>
                        <input type="text" asp-for="RoleName" class="form-control" maxlength="45" required />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold">Description *</label>
                        <input type="text" asp-for="Description" class="form-control" maxlength="45" required />
                    </div>
                    <div class="m-b-15">
                        <a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" role="button">Cancel</a>
                        <button class="btn btn-primary" type="submit">
                            <span>Create</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $("#form-validation").validate({
            ignore: ':hidden:not(:checkbox)',
            errorElement: 'label',
            errorClass: 'is-invalid',
            validClass: 'is-valid',
        });
    </script>
}